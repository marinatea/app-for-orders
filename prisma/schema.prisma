datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId      String  @id @default(cuid())
  codeToLogin String
  userName    String?
  role        String
}

model Cart {
  cartId   String  @id @default(cuid())
  userId   String
  products Product[]
}

model Product {
  productId String  @id @default(cuid())
  name      String
  orderLink String
  description String?
  category   String?
  store      String?
  cartId     String  
  cart       Cart    @relation(fields: [cartId], references: [cartId]) 
}
